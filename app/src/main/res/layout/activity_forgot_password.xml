<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp"
    android:background="@drawable/background_gradient"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo" />

        <!-- Título -->
        <TextView
            android:id="@+id/forgotPasswordTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar Contraseña"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp" />

        <!-- Correo electrónico -->
        <EditText
            android:id="@+id/emailForRecoveryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Ingresa tu correo electrónico"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <!-- Botón enviar -->
        <Button
            android:id="@+id/submitRecoveryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar enlace de recuperación"
            android:layout_marginTop="24dp"
            android:minHeight="56dp" />

        <!-- Volver al login -->
        <TextView
            android:id="@+id/backToLoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al login"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:onClick="navigateToLogin"
            tools:ignore="OnClick" />

    </LinearLayout>
</ScrollView>