<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 🧾 Saludo personalizado -->
        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Hola, Usuario!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- 🛡️ Rol del usuario -->
        <TextView
            android:id="@+id/txtRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rol: Desconocido"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- ✨ Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Una plataforma integral para gestionar usuarios, productos, préstamos y más de forma eficiente."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 👥 Usuarios -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👥 Gestión de Usuarios"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- 💰 Préstamos -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnPrestamos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💰 Gestión de Préstamos"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- 📦 Productos -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📦 Gestión de Productos"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- 🗂️ Recursos -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnRecursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🗂️ Gestión de Recursos"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- 🔐 Roles -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔐 Gestión de Roles"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- 🚪 Cerrar sesión -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="12dp"
            android:backgroundTint="@android:color/holo_red_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚪 Cerrar sesión"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
